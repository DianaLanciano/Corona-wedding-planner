@model CoronaWedding.Models.Location

@{
    ViewData["Title"] = "Create";
}

<script defer
        src="https://maps.googleapis.com/maps/api/js?key=APIc&libraries=places&&callback=initSearch"></script>

<h1>Create</h1>

<h4>Location</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="placeCapacity" class="control-label"></label>
                <input asp-for="placeCapacity" class="form-control" />
                <span asp-validation-for="placeCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="supplireEmail" class="control-label"></label>
                <input asp-for="supplireEmail" class="form-control" />
                <span asp-validation-for="supplireEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="area" class="control-label"></label>
                <input asp-for="area" class="form-control" />
                <span asp-validation-for="area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">City</label>
                <input class="form-control" id="searchTextField" type="text" size="50" placeholder="Enter Israeli City.." />
            </div>

            <div class="form-group">
                <label asp-for="imagePath" class="control-label"></label>
                <input asp-for="imagePath" class="form-control" />
                <span asp-validation-for="imagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

            <input asp-for="Latitude" class="form-control" id="lon" type="text" hidden />
            <input asp-for="Longitude" class="form-control" id="lat" type="text" hidden />
            <input asp-for="city" class="form-control" id="city" type="text" hidden />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<script>
    function initSearch() {
        var input = document.getElementById("searchTextField");
        var options = {
            componentRestrictions: { country: 'il' }
        };

        autocomplete = new google.maps.places.Autocomplete(input, options);
        google.maps.event.addListener(autocomplete, 'place_changed', function () {
            var place = autocomplete.getPlace();

            document.getElementById("lat").value = place.geometry.location.lat();
            document.getElementById("lon").value = place.geometry.location.lng();
            document.getElementById("city").value = place.vicinity;
        });
    }
</script>