@model CoronaWedding.Models.Account

@{
    ViewData["Title"] = "Checkout";
}

<div class="title">
    <img src="/Media/images/checkoutLogo.PNG" alt="title" class="img">
</div>
<hr />

<div class="why_us_section">
    <div class="col-lg-4 col-md-6 mx-auto">
        <div class="box">
            <div class="img-box">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <div class="detail-box">
                <h4>Purchase summary:</h4>
                <hr />
                <p>
                    @if (@ViewBag.LocationPrice != 0)
                    {
                        <h5>Location: @ViewBag.LocationPrice$</h5>
                    }
                    @if (@ViewBag.CateringPrice != 0)
                    {
                        <h5>Catering: @ViewBag.CateringPrice$</h5>
                    }
                    @if (@ViewBag.MusicPrice != 0)
                    {
                        <h5>Music: @ViewBag.MusicPrice$</h5>
                    }
                    @if (@ViewBag.PhotographerPrice != 0)
                    {
                        <h5>Photographer: @ViewBag.PhotographerPrice</h5>
                    }
                    <hr />
                    <h5>Total price: @ViewBag.Total$</h5>
                </p>
            </div>
        </div>
    </div>
</div>


