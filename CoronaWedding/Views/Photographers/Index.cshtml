@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@model IEnumerable<CoronaWedding.Models.Photographer>

@{ ViewData["Title"] = "Index"; }

<div class="title">
    <img src="/Media/images/photoLogo.PNG" alt="title" class="img">
</div>
<hr>

@if (HttpContextAccessor.HttpContext.Session.GetString("userId") != null)
{

@foreach (Recommend entry in ViewBag.recommended)
{
<div class="why_us_section">
    <div class="col-lg-4 col-md-6 mx-auto col-3">
        <div class="box">
            <div class="img-box">
                <i class="fas fa-camera-retro"></i>
            </div>
            <div class="detail-box">
                <h5>
                    Recommended Just For You!
                </h5>
                <p>
                    <h5>Email: @entry.Photographer.supplireEmail</h5>
                    <img width="150" height="150" src="@entry.Photographer.imagePath" />
                </p>
            </div>
        </div>
    </div>
</div>}}




@foreach (var item in Model)
{
<div class="responsive-images">
    <div class="filterDiv">
        @if (ViewBag.IsAdmin)
        {
<div class="AdminButtons">
    <a asp-controller="Photographers" asp-action="Edit" asp-route-id="@item.PhotographerId">Edit</a>
    <a asp-controller="Photographers" asp-action="Delete" asp-route-id="@item.PhotographerId">Delete</a>
</div>}
        <img id=@item.PhotographerId src="@item.imagePath" class="imageFilter" name="Photographers">
        <h5>Email: @item.supplireEmail</h5>
        <h5>Price: @item.price</h5>
        <button class="buttonForSite addToCartButoon" id=@item.PhotographerId name="Photographer">
            Add To Cart
        </button>
    </div>
</div>}

<div class="prevAndNext">
    <a class="previous" asp-controller="Music" asp-action="Index">&laquo; Previous</a>
    <a class="next" asp-controller="Accounts" asp-action="Checkout">Next &raquo;</a>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_Popup");}
    <script src="~/js/dynamicFilter.js"></script>
}
